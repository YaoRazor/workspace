#include <iostream>
#include <fstream>
#include <stdio.h>
//#include <sstrem.h>
//#include <>
using namespace std;

int main(int argc, char** argv)
{

/*test input*/	  
//    int i;
//    printf("argc=%d\n",argc);
//    for (i=0; i < argc; i++)
//        printf("Argument %d is %s.\n", i, argv[i]);
/*test input*/	 

		string a=argv[1];
		cout << a <<endl;

		/*read all text of one file to string*/
		ifstream in(a.c_str(), ios::in);
		istreambuf_iterator<char> beg(in), end;
		string strdata(beg, end);
		cout << strdata <<endl;

		char read[256];  
    while(in.getline(read, 256, '\n')) // 逐词读取方法三  
    {  
    cout << read << endl;  
    }  
		/*read all text of one file to string*/

		in.close();
	  return 0;

}
